@{
}
@model List<StudentPortal.Models.Entities.Course>

<h1>Course</h1>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>CourseId</th>
            <th>CourseCode</th>
            <th>CourseName</th>
            <th>Description</th>
            <th>Credits</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.CourseId</td>
                <td>@course.CourseCode</td>
                <td>@course.Name</td>
                <td>@course.Description</td>
                <td>@course.Credits</td>
                
            <td>
            <a class="btn btn-primary" asp-controller="Courses" asp-action="Edit" asp-route-CourseId="@course.CourseId">Edit</a>
            </td>
               
            
        </tr>
        }
    </tbody>
</table>